
@{
    ViewData["Title"] = "Calificar aplicación";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">

    <div class="card shadow mb-4">
        <div class="card-header py-3 bg-second-primary">
            <h6 class="m-0 font-weight-bold text-white">Cambiar limite de gasto mensual</h6>
        </div>
        <div class="card-body">

            <div class="row">
                <div class="col-sm-12">
                    <form>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-row">
                                    <div class="form-group col-sm-6">
                                        <label for="txtNuevaCalificacion">Ingrese un comentario</label>
                                        <input type="text" class="form-control form-control-sm input-validar" id="txtNuevaCalificacion" name="Nuevo limite mensual">
                                    </div>
                                    <div class="form-group col-sm-6">
                                        <label for="numNuevaCalificacionValor">Ingrese una calificacíon</label>
                                        <input type="number" class="form-control form-control-sm input-validar" id="numNuevaCalificacionValor" name="Ingrese un valor del 1 a 5">
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <hr>
                                <div class="row">
                                    <div class="col-sm-12">
                                        <button class="btn btn-success btn-sm" type="button" id="btnGuardarCambios">Guardar Cambios</button>
                                    </div>
                                </div>

                            </div>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>

