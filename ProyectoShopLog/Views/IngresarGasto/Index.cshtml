
@{
    ViewData["Title"] = "Ingresar gasto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">

    <div class="card shadow mb-4">
        <div class="card-header py-3 bg-second-primary">
            <h6 class="m-0 font-weight-bold text-white">Ingresar gasto</h6>
        </div>
        <div class="card-body">

            <div class="row">
                <div class="col-sm-12">
                    <form>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-row">
                                    <div class="form-group col-sm-6">
                                        <label for="txtNombredelGasto">Nombre del gasto</label>
                                        <input type="text" class="form-control form-control-sm input-validar" id="txtNombredelGasto" name="Nombre del gasto">
                                    </div>
                                    <div class="form-group col-sm-6">
                                        <label for="txtDescripcion">Descripción</label>
                                        <input type="text" class="form-control form-control-sm input-validar" id="txtDescripcion" name="Descripción">
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-sm-6">
                                        <label for="numMonto">Monto</label>
                                        <input type="number" class="form-control form-control-sm input-validar" id="numMonto" name="Monto">
                                    </div>
                                    <div class="form-group col-sm-6">
                                        <label for="dateFechaIngreso">Fecha de ingreso</label>
                                        <input type="date" class="form-control form-control-sm input-validar" id="dateFechaIngreso" name="Fecha de ingreso">
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <hr>
                                <div class="row">
                                    <div class="col-sm-12">
                                        <button class="btn btn-success btn-sm" type="button" id="btnGuardarCambios">Guardar Cambios</button>
                                    </div>
                                </div>

                            </div>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>